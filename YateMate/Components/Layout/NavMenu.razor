                                Chat
                            </MudNavLink>

                        </Authorized>
                    </AuthorizeView>

                    <AuthorizeView Roles="Empleado">
                        <Authorized Context="Empleado">
                            <div class="nav-item px-3">
                                <MudNavLink class="nav-link" Href="/agregarApplicationUser">
                                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Agregar cliente
                                </MudNavLink>
                            </div>
                            <div class="nav-item px-3">
                                <MudNavLink class="nav-link" Href="/ListarApplicationUsers">
                                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Listar clientes
